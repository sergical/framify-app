generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Wallet {
  id      Int    @id @default(autoincrement())
  fid     String
  shop    String
  address String
}

model Frame {
  id      Int    @id @default(autoincrement())
  fid     String
  shop    String
  name    String
  address String
  imageUrl String
  checkoutUrl String @unique
  price   Float
}